<Window x:Class="Eraser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.ignore.com"
        mc:Ignorable="d ignore"
        Height="300"
        Width="300"
        Title="Eraser"
        DataContext="{Binding Main, Source={StaticResource Locator}}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skins/MainSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid x:Name="LayoutRoot">

        <ComboBox FontSize="12"
                   FontWeight="Bold"
                   Foreground="Purple"
                   ItemsSource="{Binding AdapterList}"
                   DisplayMemberPath="Name"
                   VerticalAlignment="Center"
                   SelectedIndex="0"
                   SelectedItem="{Binding SelectedAdapter}"
                   HorizontalAlignment="Center" Margin="10,10,10,224" Width="272" />

        <TextBox FontSize="12"
                 FontWeight="Bold"
                 Foreground="Purple"
                 Text="{Binding SelectedAdapter.DNS[0]}"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 TextWrapping="Wrap" Margin="10,44,10,195" Width="272" />

        <TextBox FontSize="12"
                 FontWeight="Bold"
                 Foreground="Purple"
                 Text="{Binding SelectedAdapter.DNS[1]}"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 TextWrapping="Wrap" Margin="10,79,10,160" Width="272" />


    </Grid>
</Window>
